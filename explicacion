    <!-- Navegaci√≥n -->
    <div class="navigation">
        <button class="nav-button" id="prevBtn" onclick="previousPage()" disabled>‚Üê Anterior</button>
        <button class="nav-button" id="nextBtn" onclick="nextPage()">Siguiente ‚Üí</button>
    </div>

    <script>
        let currentPage = 1;
        const totalPages = 3;

        function showMessage(message) {
            alert(message);
        }

        function updateNavigation() {
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            prevBtn.disabled = currentPage === 1;
            nextBtn.disabled = currentPage === totalPages;
            
            if (currentPage === totalPages) {
                nextBtn.textContent = 'Finalizar';
            } else {
                nextBtn.textContent = 'Siguiente ‚Üí';
            }
        }

        function showPage(pageNumber) {
            // Ocultar todas las p√°ginas
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // Mostrar la p√°gina actual
            document.getElementById('page' + pageNumber).classList.add('active');
            
            // Cambiar color de fondo del body
            if (pageNumber === 1) {
                document.body.className = '';
            } else {
                document.body.className = 'page' + pageNumber;
            }
            
            currentPage = pageNumber;
            updateNavigation();
        }

        function nextPage() {
            if (currentPage < totalPages) {
                showPage(currentPage + 1);
            } else {
                alert('¬°Has completado la lecci√≥n sobre Botones Flotantes! üéâ\n\nAhora ya sabes:\n- Qu√© son los FAB\n- Tipos de botones flotantes\n- C√≥mo implementarlos\n- Mejores pr√°cticas');
            }
        }

        function previousPage() {
            if (currentPage > 1) {
                showPage(currentPage - 1);
            }
        }

        // Inicializar la navegaci√≥n
        updateNavigation();

        // Navegaci√≥n con teclado
        document.addEventListener('keydown', function(event) {
            if (event.key === 'ArrowLeft' && currentPage > 1) {
                previousPage();
            } else if (event.key === 'ArrowRight' && currentPage < totalPages) {
                nextPage();
            }
        });
    </script>
