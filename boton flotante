        üí¨
    </button>

    <!-- MODAL -->
    <div id="modal" class="modal" onclick="closeModal(event)">
        <div class="modal-content">
            <h2>¬°Bot√≥n Flotante Activado! üéâ</h2>
            <p>Has hecho clic en el bot√≥n flotante. Este tipo de interacci√≥n es muy com√∫n en aplicaciones web modernas.</p>
            <button class="close-button" onclick="closeModal()">Cerrar</button>
        </div>
    </div>

    <script>
        // JavaScript para el funcionamiento del bot√≥n flotante
        function openModal() {
            document.getElementById('modal').style.display = 'block';
            // Opcional: agregar clase para animaciones
            document.body.style.overflow = 'hidden'; // Previene scroll
        }

        function closeModal(event) {
            // Si se hace clic fuera del modal o en el bot√≥n cerrar
            if (event && event.target !== event.currentTarget) return;
            
            document.getElementById('modal').style.display = 'none';
            document.body.style.overflow = 'auto'; // Restaura scroll
        }

        // Cerrar modal con tecla Escape
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeModal();
            }
        });

        // Opcional: Mostrar/ocultar bot√≥n basado en scroll
        window.addEventListener('scroll', function() {
            const button = document.querySelector('.floating-button');
            if (window.scrollY > 100) {
                button.style.opacity = '1';
            } else {
                button.style.opacity = '0.7';
            }
        });
    </script>
